<div>
	<div>{$messages}</div>
	<form method="post" action="auth/password" class="well form-horizontal">
		<fieldset>
			<legend>Change password:</legend>
			<div class="control-group">
				<label class="control-label" for="oldpassword">Current password:</label>
				<div class="controls">
					<input id="oldpassword" name="oldpassword" type="password"
						class="input-small" placeholder="current password" />
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="password">New password:</label>
				<div class="controls">
					<input id="newpassword" name="newpassword" type="password"
						class="input-small" placeholder="New Password" />
				</div>
			</div>
		</fieldset>
		

		<button type="submit" class="btn btn-primary">Update</button>
	</form>
</div>